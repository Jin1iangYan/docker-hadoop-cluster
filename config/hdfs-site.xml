<configuration>
  <!-- 设置DataNode的数据目录的权限，700表示只有拥有者可以读、写、执行 -->
  <property>
    <name>dfs.datanode.data.dir.perm</name>
    <value>700</value>
  </property>

  <!-- 设置NameNode的数据存储目录 -->
  <property>
    <name>dfs.namenode.name.dir</name>
    <value>/data/nn</value>
  </property>

  <!-- 设置NameNode的主机列表，表示可以作为NameNode的节点 -->
  <property>
    <name>dfs.namenode.hosts</name>
    <value>node1,node2,node3</value>
  </property>

  <!-- 设置HDFS块的大小，值为268435456字节（256MB） -->
  <property>
    <name>dfs.blocksize</name>
    <value>268435456</value>
  </property>

  <!-- 设置NameNode的处理器数量，控制NameNode同时处理请求的线程数 -->
  <property>
    <name>dfs.namenode.handler.count</name>
    <value>100</value>
  </property>

  <!-- 设置DataNode的数据存储目录 -->
  <property>
    <name>dfs.datanode.data.dir</name>
    <value>/data/dn</value>
  </property>
</configuration>